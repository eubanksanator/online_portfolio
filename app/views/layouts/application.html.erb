  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Home", root_path, class: "navbar-brand" %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

        <ul class="nav navbar-nav navbar-right">
          <% if admin_signed_in? %>
          <li><%= link_to "Sign out", destroy_admin_session_path, :method => :delete %></li>
          <% end %>
          <li><%= link_to "Github", "https://github.com/eubanksanator" %></li>
          <li><%= link_to "Work Experience", work_experiences_path %></li>
          <li><%= link_to "Education", educations_path, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Loading credentials..."} %></li>
          <li><%= link_to "Portfolio", portfolios_path %></li>
          <!-- <li><%# link_to "Skills", skills_path %></li> -->
          <!-- <li><%# link_to "Technologies", technologies_path %></li> -->
          <li><%= link_to "Contact", contact_path %></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
