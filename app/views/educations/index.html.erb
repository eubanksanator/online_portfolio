<p id="notice"><%= notice %></p>
<div class="row">
  <h1>Listing Educations</h1>
  <%= link_to 'New Education', new_education_path %>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="col-md-8">
    <div class="panel panel-default">
        <% @educations.each do |education| %>
        <div class="well">
          <h4 class="text-center"> <%= education.school_name %></h4>
          <%= fa_icon "map-marker" %> <span class="orange"><%= education.location%></span><br/>
          <%= fa_icon "bookmark-o" %> <%= education.course_program %><br/>
          <%= fa_icon "calendar"%> <%= education.duration %><br/>
          <%= education.description %>

          <%= link_to 'Show', education %> |
          <%= link_to 'Edit', edit_education_path(education) %> |
          <%= link_to 'Delet', education, method: :delete, data: {confirm: 'Are you sure?'} %> |
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="spacer"></div>

<div class="row edu-border">
  <div class="col-md-12">
    <div class="row">
      <h3><%= fa_icon 'code' %> CodeSchool</h3>
      <%= link_to "CodeSchool.com", "https://www.codeschool.com", class:'pull-left' %>
      <div class="pull-right">(Total score: <%= number_with_delimiter @cs_info['total_score'] %>)</div>
    </div>
    <hr>

    <% @cs_badges.each do |badge| %>
    <div class="col-md-3">
      <%= image_tag badge['badge'], size: '35' %><br/>
      <%= badge['title'] %>
    </div>
    <% end %>
  </div>
</div>

<div class="spacer"></div>

<div class="row edu-border">
  <div class="col-md-12">
    <div class="row">
      <h3><%= fa_icon 'share-alt' %> TeamTreeHouse</h3>
      <%= link_to "TeamTreeHouse.com", "https://www.teamtreehouse.com" %>
      <div class="pull-right">(Total score: <%= number_with_delimiter @tth_points.first[1] %>)</div>
    </div>
    <hr>

    <% @tth_points.each do |pt| %>
    <div class="col-md-3 pts">
      <h6><%= (pt[0]).upcase %></h6>
      <p><%= number_with_delimiter pt[1] %> pts</p>
    </div>
    <% end %>
  </div>
</div>


